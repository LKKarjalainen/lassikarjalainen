---
const { title } = Astro.props
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} — Lassi Karjalainen` : 'Lassi Karjalainen'}</title>
    <link rel="stylesheet" href="/src/styles/global.css">
  </head>
  <body>
    <header class="site-header">
      <a class="brand" href="/">Lassi Karjalainen</a>
    </header>
    <slot />
    <footer class="site-footer">
      <p>© {new Date().getFullYear()} Lassi Karjalainen</p>
    </footer>
  </body>
  </html>
